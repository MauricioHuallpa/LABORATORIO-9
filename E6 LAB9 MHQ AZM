class Motor:
    def __init__(self):
        self.encendido= False
    def encender_motor(self):
        self.encendido= True

objeto = Motor() #objeto para la clase

print('el motor esta encendido ? .......R:',objeto.encendido) 

objeto.encender_motor()
print('el motor esta encendido ? .......R:',objeto.encendido)
    


